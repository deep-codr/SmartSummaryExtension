{
  "manifest_version": 3,
  "name": "Smart Summary",
  "version": "1.0",
  "description": "Summarize articles using AI.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
